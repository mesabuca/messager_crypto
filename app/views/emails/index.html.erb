<p id="notice"><%= notice %></p>



<h1>Received Emails</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Receiver</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @received_emails.each do |email| %>
      <tr>
        <td><%= email.id %></td>
        <td><%= email.title %></td>
        <td><%= email.receiver.email %></td>
        <td><%= email.content %></td>
        <td><%= email.user.email %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
